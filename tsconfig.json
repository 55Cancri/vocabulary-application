{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    // this one was important. When set as es6, stopped recognizing imports
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "target": "es6",
    "jsx": "react", // or try preserve
    "lib": ["es2018", "es6", "dom"]
  }

